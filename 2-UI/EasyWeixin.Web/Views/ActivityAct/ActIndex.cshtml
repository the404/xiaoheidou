@{
    Layout = null;
}
@model List<EasyWeixin.Model.Act>

<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, minimum-scale=1, user-scalable=no;" />
    <meta name="keywords" content="欢乐谷,上海欢乐谷,上海欢乐谷精彩活动,上海欢乐谷微信,旅游,主题公园,探险,时尚,动感,梦幻,互动力,ipow;" />
    <meta name="description" content='上海欢乐谷是继深圳欢乐谷、北京欢乐谷、成都欢乐谷之后，欢乐谷品牌全国连锁发展的重要布点，一期项目投资40余亿元，于2009年暑期建成开放。致力于打造目前中国规模最大，项目最多，景色最美，科技含量最高的主题公园。' />
    <title>当前活动|上海欢乐谷官方微信</title>
    <link href="~/shanghai/Css/base.css" rel="stylesheet" />
</head>

<body>
    <!--//页面头部-->
    @Html.Raw(File.ReadAllText(Server.MapPath("/shanghai/Include/head.htm")))

    <!--End页面头部-->
    <!--//页面内容-->
    <section id="wrap">
        <div id="content">
            @if (Model != null)
            {
                for (int i = 0; i < Model.Count; i++)
                {
                <div class="activityBox">
                    <a class="a1" href="/ActivityAct/ActDetail?ActID=@Model[i].ID">
                        <img src="@Model[i].ImageUrl" alt="" /></a>
                    <h2>@Model[i].Name</h2>
                    <p>@Convert.ToDateTime(Model[i].StartDate).ToString("yyyy.MM.dd") -@Convert.ToDateTime(Model[i].EndDate).ToString("yyyy.MM.dd")</p>
                    <a class="a2" href="/ActivityAct/ActDetail?ActID=@Model[i].ID"></a>
                    <div class="hot"><strong>HOT</strong></div>
                </div>
                }
            }

            <p class="hint">没有更多了</p>
            <div class="rich_media_tool">
                <div class="meta_primary">阅读 <span id="rp">0</span></div>
                <a class="meta_primary meta_praise" href="javascript:;" id="like">
                    <i class="icon_praise_gray"></i>
                    <span class="praise_num">0</span>
                </a>
            </div>
        </div>
    </section>
    <!--//设备横屏提醒-->
    <section id="transverse"></section>
    <!--End设备横置提醒//-->
    <!--//版权信息-->
    @Html.Raw(File.ReadAllText(Server.MapPath("/shanghai/Include/foot.htm")))
    <!--End版权信息-->
</body>
</html>