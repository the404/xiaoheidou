@{
    ViewBag.Title = "GetAwardDatas";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using EasyWeixin.Core.MvcPager
@model List<EasyWeixin.Model.SnowUser>

<div class="main-wrapper">
    <div class="container-fluid">
        <div class="row-fluid ">
            <div class="span12">
                <div class="primary-head">
                    <h3 class="page-header">恶鬼快跑</h3>
                    <ul class="top-right-toolbar">
                        <li><a data-toggle="dropdown" class="dropdown-toggle blue-violate" href="#" title="Users"><i class="icon-user"></i></a>
                        </li>
                        <li><a href="#" class="green" title="Upload"><i class=" icon-upload-alt"></i></a></li>
                        <li><a href="#" class="bondi-blue" title="Settings"><i class="icon-cogs"></i></a></li>
                    </ul>
                </div>
                <ul class="breadcrumb">
                    <li><a href="#" class="icon-home"></a><span class="divider "><i class="icon-angle-right"></i></span></li>
                    <li><a href="/Ghost/GhostIndex">恶鬼快跑</a><span class="divider"><i class="icon-angle-right"></i></span></li>
                    <li class="active">中奖列表 </li>
                </ul>
            </div>
        </div>
        @{
            //var award1 = Model.Where(o => o.IsAward == 1).Take(16);
            //var award2 = Model.Where(o => o.IsAward == 1).Skip(16);
            var award3 = Model.Where(o => o.IsAward == 2).Take(20);
            var award4 = Model.Where(o => o.IsAward == 2).Skip(20);
        }
        <div class="row-fluid">
            <div class="span12">
                <div class="content-widgets light-gray">
                    <div class="widget-head bondi-blue">
                        <h3>中奖列表</h3>
                    </div>
                    <div class="widget-container">
                        <table class="table table-hover responsive">
                            <thead>
                                <tr>
                                    <th>用户名称
                                    </th>
                                    <th>手机号
                                    </th>
                                    <th>分数
                                    </th>
                                    <th>中奖情况
                                    </th>
                                    <th>提交日期
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{foreach (var item in award3)
                                  {
                                    <tr>
                                        <td>
                                            @item.SnowUserName
                                        </td>
                                        <td>
                                            @item.SnowUserPhone
                                        </td>
                                        <td>
                                            @item.Score
                                        </td>
                                        <td>年卡1张（排名第1）
                                        </td>

                                        <td>
                                            @item.AddDate
                                        </td>
                                    </tr>
                                  }
                                }

                                @{foreach (var item in award4)
                                  {
                                    <tr>
                                        <td>
                                            @item.SnowUserName
                                        </td>
                                        <td>
                                            @item.SnowUserPhone
                                        </td>
                                        <td>
                                            @item.Score
                                        </td>
                                        <td>夜场门票一张/人（排名2-6）
                                        </td>

                                        <td>
                                            @item.AddDate
                                        </td>
                                    </tr>
                                  }
                                }
                            </tbody>
                        </table>
                        <div>
                            @*  <div style="width: 500px; float: right">
                                @Html.Pager(Model, new PagerOptions { PageIndexParameterName = "pageid", CssClass = "pagination dataTables_paginate" })
                            </div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>