@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

 <div class="main-wrapper">
     <div class="container-fluid">
			<div class="row-fluid ">
				<div class="span12">
					<div class="primary-head">
						<h3 class="page-header">图片管理</h3>
						<ul class="top-right-toolbar">
							<li><a data-toggle="dropdown" class="dropdown-toggle blue-violate" href="#" title="Users"><i class="icon-user"></i></a>
							</li>
							<li><a href="#" class="green" title="Upload"><i class=" icon-upload-alt"></i></a></li>
							<li><a href="#" class="bondi-blue" title="Settings"><i class="icon-cogs"></i></a></li>
						</ul>
					</div>
					<ul class="breadcrumb">
						<li><a href="#" class="icon-home"></a><span class="divider "><i class="icon-angle-right"></i></span></li>
						<li><a href="#">图片管理</a><span class="divider"><i class="icon-angle-right"></i></span></li>
						<li class="active">图片创建</li>
					</ul>
				</div>
			</div>

        @{ using (Html.BeginForm("UpLoadImage", "ResponseImage", FormMethod.Post, new { enctype = "multipart/form-data" }))
           {
               	<div class="row-fluid">
				<div class="span12">
					<div class="content-widgets gray">
						<div class="widget-head bondi-blue">
							<h3>编辑图片</h3>
						</div>
						<div class="widget-container">
							<div class="form-container grid-form form-background">

                                <div class="control-group">
									<label class="control-label">上传图片<label class="error">（图片大小限制：2M，    支持格式：bmp, png, jpeg, jpg, gif）</label> </label>
									<div class="controls">
										<div class="fileupload fileupload-new" data-provides="fileupload">
											<div class="fileupload-new thumbnail" style="width: 400px; height: 300px;">
												<img src="http://www.placehold.it/400x300/EFEFEF/AAAAAA" alt="img">
											</div>
											<div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 400px; max-height: 350px; line-height: 20px;">
											</div>
											<div>
												<span class="btn btn-file"><span class="fileupload-new">Select image</span><span class="fileupload-exists">Change</span>
													<input name="fileName" type="file" />
												</span><a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remove</a>
											</div>
										</div>
									</div>
                                      <label class="error">@TempData["ErrorMessage"] </label>
								</div>

									<div class="form-actions">
										<button type="submit" class="btn btn-extend">提交</button>
                                        @Html.ActionLink("返回列表", "Index",new {}, new {@class="btn btn-extend" })
									</div>
								<div class="error-container">
									<h4>@TempData["ErrorMessage"] </h4>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
        }
     }
</div></div>