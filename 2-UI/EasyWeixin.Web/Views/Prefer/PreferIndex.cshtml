@{
    ViewBag.Title = "优惠信息";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using EasyWeixin.Core.MvcPager
@model EasyWeixin.Core.MvcPager.PagedList<EasyWeixin.Model.Prefer>
<div class="main-wrapper">
    <div class="container-fluid">
        <div class="row-fluid ">
            <div class="span12">
                <div class="primary-head">
                    <h3 class="page-header">优惠信息</h3>
                    <ul class="top-right-toolbar">
                        <li><a data-toggle="dropdown" class="dropdown-toggle blue-violate" href="#" title="Users"><i class="icon-user"></i></a>
                        </li>
                        <li><a href="#" class="green" title="Upload"><i class=" icon-upload-alt"></i></a></li>
                        <li><a href="#" class="bondi-blue" title="Settings"><i class="icon-cogs"></i></a></li>
                    </ul>
                </div>
                <ul class="breadcrumb">
                    <li><a href="#" class="icon-home"></a><span class="divider "><i class="icon-angle-right"></i></span></li>
                    <li><a href="#">优惠信息</a><span class="divider"><i class="icon-angle-right"></i></span></li>
                    <li class="active">活动列表 </li>
                </ul>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="content-widgets light-gray">
                    <div class="widget-head bondi-blue">
                        <h3>数据列表</h3>
                    </div>
                    <div class="widget-container">
                        <table class="table table-hover responsive">
                            <thead>
                                <tr>
                                    <th>标题
                                    </th>
                                    <th>图片
                                    </th>
                                  @*  <th>开始时间
                                    </th>
                                    <th>结束时间
                                    </th>*@
                                    <th>添加日期
                                    </th>
                                    <th>置顶
                                    </th>
                                     <th>获取链接
                                    </th>
                                    <th>状态
                                    </th>
                                    <th>编辑
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{foreach (var item in Model)
                                  {
                                    <tr>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                             <img src="@item.ImageUrl" style="height: 100px;width: 180px" />
                                        </td>

                                       @* <td>
                                            @Convert.ToDateTime(item.StartDate).ToString("yyyy-MM-dd")
                                        </td>

                                        <td>
                                            @Convert.ToDateTime(item.EndDate).ToString("yyyy-MM-dd")
                                        </td>*@

                                        <td>
                                            @Convert.ToDateTime(item.AddDate).ToString("yyyy-MM-dd")
                                        </td>
                                        <td>
                                            @{
                                              var istop = "";
                                              if (item.IsTop == 1)
                                              {
                                                  istop = "已置顶";
                                              }
                                              else
                                              {
                                                  istop = "";
                                              }
                                              var istop1 = "";
                                              if (item.IsTop == 1)
                                              {
                                                  istop1 = "<a href='IsTopOperation?id="+item.ID+"'><font color='red;'>取消</font></a>";
                                              }
                                              else
                                              {
                                                  istop1 = "<a href='IsTopOperation?id=" + item.ID + "'>置顶</a>";
                                              }
                                             }
                                            @istop
                                            @Html.Raw(istop1)
                                        </td>
                                        <td>
                                            @Html.ActionLink("获取链接", "GetLink", new { id = item.ID })
                                        </td>
                                        @{
                                      var status = "";
                                      if (System.DateTime.Now >= item.StartDate || System.DateTime.Now <= Convert.ToDateTime(item.EndDate).AddDays(1))
                                      {
                                          status = "进行中";
                                      }
                                      if (System.DateTime.Now < item.StartDate)
                                      {
                                          status = "未进行";
                                      }
                                      if (System.DateTime.Now > Convert.ToDateTime(item.EndDate).AddDays(1))
                                      {
                                          status = "已结束";
                                      }
                                        }
                                        <td>
                                            @status
                                        </td>
                                        <td>
                                            @Html.ActionLink("修改", "PreferEdit", new { id = item.ID })

                                           @* @if (status == "未进行")
                                            {
                                                @Html.ActionLink("删除", "PreferDelete", new { id = item.ID },new { onclick = "return confirm('确认删除？')" })
                                            }*@
                                            @Html.ActionLink("删除", "PreferDelete", new { id = item.ID },new { onclick = "return confirm('确认删除？')" })
                                        </td>
                                    </tr>
                                  }
                                }
                            </tbody>
                        </table>
                        <div>
                            <div style="width: 500px; float: right">
                                @Html.Pager(Model, new PagerOptions { PageIndexParameterName = "pageid", CssClass = "pagination dataTables_paginate" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>