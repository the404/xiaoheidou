        webWrap.style.webkitTransform = "scale(" + iScale + ")";
    }
    fnViewScale();
    var wWidth = $(window).width(),
        wHeight = $(window).height();
    function showTip() {
        var tempWidth;
        if (wWidth <= wHeight) {
            tempWidth = wWidth;
        } else {
            tempWidth = wHeight;
        }
        var nowWidth = $(window).width();
        if (nowWidth > tempWidth) {
            $("#transverse").show();
        } else {
            $("#transverse").hide();
        }
    }
    showTip();
    window.onresize = function () {
        fnViewScale();
        showTip();
    };
