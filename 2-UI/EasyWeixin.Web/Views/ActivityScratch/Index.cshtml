    </div>
    <div id="myawarddiv">
        @if (Model != null && Model.MyAwards.Count > 0)
        {
            <table cellpadding="0" cellspacing="0">
                <thead>
                    <tr>
                        <th></th>
                        <th>名字</th>
                        <th>手机</th>
                        <th>奖项</th>
                        <th>中奖日期</th>
                        <th>是否领奖</th>
                        <th>过期时间</th>
                    </tr>
                </thead>
                <tbody>
                    @{
            int i = 0;
            if (Model != null)
            {
                foreach (var item in Model.MyAwards)
                {
                    i++;
                    <tr>
                        <td>@i.</td>
                        <td>@item.Name</td>
                        <td>@item.Phone</td>
                        <td>@item.ScratchItem.ScratchItemAward</td>
