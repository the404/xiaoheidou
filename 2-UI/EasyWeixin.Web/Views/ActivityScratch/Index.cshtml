                                    $('#prize_title').html(data.ScratchItemName);
                                } else {

                                    win_alert(data.message);
                                    return false;
                                }
                                return false;
                            }, "json");

                    } else {
                        win_alert("您已经没有刮刮卡了！<br />分享好友获取抽奖机会");
                        return false;
                    }
                    return false;
                });

                (function ($) {
