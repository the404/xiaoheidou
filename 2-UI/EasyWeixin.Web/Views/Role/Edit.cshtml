@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model EasyWeixin.Model.Role

 <div class="main-wrapper">
     <div class="container-fluid">
			<div class="row-fluid ">
				<div class="span12">
					<div class="primary-head">
						<h3 class="page-header">角色管理</h3>
						<ul class="top-right-toolbar">
							<li><a data-toggle="dropdown" class="dropdown-toggle blue-violate" href="#" title="Users"><i class="icon-user"></i></a>
							</li>
							<li><a href="#" class="green" title="Upload"><i class=" icon-upload-alt"></i></a></li>
							<li><a href="#" class="bondi-blue" title="Settings"><i class="icon-cogs"></i></a></li>
						</ul>
					</div>
					<ul class="breadcrumb">
						<li><a href="#" class="icon-home"></a><span class="divider "><i class="icon-angle-right"></i></span></li>
						<li><a href="#">角色管理</a><span class="divider"><i class="icon-angle-right"></i></span></li>
						<li class="active">角色编辑</li>
					</ul>
				</div>
			</div>

        @{ using (Html.BeginForm("Edit", "Role"))
           {
                @Html.HiddenFor(model => model.RoleId)
                @Html.HiddenFor(model => model.IsOrder)
                @Html.HiddenFor(model => model.IsMenu)
               	<div class="row-fluid">
				<div class="span12">
					<div class="content-widgets gray">
						<div class="widget-head bondi-blue">
							<h3>角色编辑</h3>
						</div>
						<div class="widget-container">
							<div class="form-container grid-form form-background">
								<!-- our error container -->
										<div class="control-group">
										<label class="control-label">角色名称</label>
										<div class="controls">
                                              @Html.TextBoxFor(model => model.RoleChineseName, new { @placeholder = "输入角色名称", @class = "span7" })
										</div>
									</div>
									<div class="control-group">
										<label class="control-label">角色控制器名称</label>
										<div class="controls">
											  @Html.TextBoxFor(model => model.RoleName, new { @placeholder = "输入角色控制器名称", @class = "span7" })
										</div>
									</div>
							<div class="control-group">
										<label class="control-label">选择权限</label>
										<div class="controls">

                                             @{
                                               var PermissionInRoles = Model.PermissionsInRoles.ToList();
                                               var list = (List<EasyWeixin.Model.Permission>)ViewData["PermissionSelectList"];
                                                for (int i = 0; i < list.Count; i++)
                                                {
                                                    if(PermissionInRoles.Find(o=>o.PermissionId==list[i].PermissionId)==null)
                                                    {

                                                    <label class="checkbox inline">
                                                    <input type="checkbox" value="@list[i].PermissionId.ToString()" name="permissions" />@list[i].PermissionChineseName</label>                             }
                                                           else{
                                                        <label class="checkbox inline">
                                                    <input type="checkbox" value="@list[i].PermissionId.ToString()" name="permissions" checked="checked" />@list[i].PermissionChineseName</label>

                                                    }
                                                }
                                             }
										</div>
									</div>
                                	<div class="control-group">
										<label class="control-label">角色页面图片名称</label>
										<div class="controls">
											  @Html.TextBoxFor(model => model.RoleImageName, new { @placeholder = "输入角色页面图片径名称", @class = "span7" })
										</div>
									</div>
									<div class="control-group">
										<label class="control-label">是否在菜单中显示</label>
										<div class="controls">
										 <label class="checkbox">
										     <input type="checkbox" value="" /></label>
										</div>
									</div>
									<div class="control-group">
										<label class="control-label">排序</label>
										<div class="controls">
											<select class="span7">
											<option>1</option>
											<option>2</option>
											<option>3</option>
											<option>4</option>
											<option>5</option>
										</select>
										</div>
									</div>

                                <div class="control-group">
										<label class="control-label">角色描述</label>
										<div class="controls">
											  @Html.TextBoxFor(model => model.RoleDesc, new { @placeholder = "输入角色描述", @class = "span7" })
										</div>
									</div>

									<div class="form-actions">
										<button type="submit" class="btn btn-extend">提交</button>
                                        @Html.ActionLink("返回列表", "Index", new { }, new { @class = "btn btn-extend" })
									</div>
								<div class="error-container">
									<h4> </h4>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
           }
     }
</div></div>